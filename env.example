# Environment Variables Example
# Copy this file to .env.local and fill in your actual values

# =============================================================================
# REQUIRED VARIABLES
# =============================================================================

# Next.js Environment (automatically set by Next.js)
NODE_ENV=development

# =============================================================================
# OPTIONAL VARIABLES
# =============================================================================

# Site Configuration
NEXT_PUBLIC_SITE_URL=http://localhost:3000

# Analytics & Monitoring
NEXT_PUBLIC_VERCEL_ANALYTICS_ID=your_vercel_analytics_id
NEXT_PUBLIC_GOOGLE_ANALYTICS_ID=your_google_analytics_id

# External APIs (if needed)
NEXT_PUBLIC_API_BASE_URL=https://api.yourservice.com

# Email Service (if implemented)
EMAIL_SERVICE_API_KEY=your_email_service_api_key
EMAIL_FROM_ADDRESS=noreply@yourportfolio.com

# Database (if added)
DATABASE_URL=postgresql://username:password@localhost:5432/your_db

# Authentication (if implemented)
NEXTAUTH_SECRET=your_nextauth_secret_key
NEXTAUTH_URL=http://localhost:3000

# =============================================================================
# DEPLOYMENT VARIABLES (Set automatically by hosting providers)
# =============================================================================

# Vercel (automatically set)
NEXT_PUBLIC_VERCEL_URL=your-app.vercel.app
VERCEL_URL=your-app.vercel.app 